---

interface Props {
    id: string,
    text: string
}

 const { id, text } = Astro.props

---

<div class="flex flex-col justify-center items-center">
    <span id={ id } class="flex flex-col justify-center items-center gap-y-2 tabular-nums text-xl md:text-3xl">00</span>
    <span class="text-base md:text-2xl">{ text }</span>
</div>