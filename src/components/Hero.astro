---
import Countdown from "./Countdown.astro";


---

<header class="relative pb-8 overflow-hidden">
    <img class="-mt-10 md:-mt-20 animate-slide-in-top animate-delay-500" src="assets/central_flowers.png" alt="central flower julio daniel and sharon wedding">
    <img class="w-[90%] md:w-4/5 mx-auto animate-slide-up-fade animate-delay-1000" src="assets/header_names.png" alt="julio daniel and sharon wedding">
    <img class="-ml-10 -mt-10 md:-ml-16 md:-mt-16 animate-slide-in-left animate-delay-800" src="assets/left_flower.png" alt="flowers down julio daniel and sharon wedding">
    <Countdown deadline="Feb 08 2025 15:30" />
    <img class="softMove absolute w-[45%] max-w-[260px] bottom-12 -right-20" src="assets/side_leaf.png" alt="side leaf julio daniel and sharon wedding">
</header>