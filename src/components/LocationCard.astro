---
interface Props {
    src: string,
    title: string,
    hour: string,
    location: string,
    address: string,
    href: string
}

const { src, title, hour, location, address, href } = Astro.props
---

<article class="text-center text-primary">
    <picture class="block aspect-square w-20 mx-auto">
        <img src={ src } alt="">
    </picture>
    <h2 class="font-sweet text-[40px] text-primary">{ title }</h2>
    <h3 class="text-lg mb-2">{ hour }</h3>
    <p class="text-sm text-pretty font-bold">{ location }</p>
    <p class="text-sm text-pretty my-4">{ address }</p>
    <a href={ href } class="flex justify-center items-center w-full py-1 mx-auto text-text bg-primary rounded-lg">
        <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="icon icon-tabler icons-tabler-filled icon-tabler-map-pin"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18.364 4.636a9 9 0 0 1 .203 12.519l-.203 .21l-4.243 4.242a3 3 0 0 1 -4.097 .135l-.144 -.135l-4.244 -4.243a9 9 0 0 1 12.728 -12.728zm-6.364 3.364a3 3 0 1 0 0 6a3 3 0 0 0 0 -6z" /></svg>
    </a>
</article>