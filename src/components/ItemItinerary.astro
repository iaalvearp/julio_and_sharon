---
interface Props {
    side: string,
    src: string,
    text: string,
    hour: string
}

const { side, src, text, hour } = Astro.props
---

<div class=`item-${side} flex items-center text-center`>
    <div class=`side-${side} flex flex-col justify-center items-center duration-500`>
        <img class="w-3/4 max-w-32" src={ src } alt="">
        <p class="text-xs md:text-base text-pretty w-[90%]">{ text }</p>
        <h3 class="text-base md:text-xl">{ hour }</h3>
    </div>
    <div class=`line-${side} w-2/5 h-[1px] bg-text duration-300`></div>
</div>